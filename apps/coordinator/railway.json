{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd ../.. && pnpm install --frozen-lockfile && cd apps/coordinator && pnpm build",
    "watchPatterns": [
      "apps/coordinator/**",
      "packages/**"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node dist/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
