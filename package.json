{
  "name": "jobbuilda",
  "version": "2.0.0",
  "private": true,
  "description": "MCP-based job management system for electrical contractors",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "./start.sh",
    "dev:core": "pnpm docker:up && pnpm dev --filter=@jobbuilda/coordinator --filter=@jobbuilda/admin --filter=@jobbuilda/portal",
    "test": "turbo test",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "docker:up": "docker compose -f infra/docker-compose.dev.yml up -d",
    "docker:down": "docker compose -f infra/docker-compose.dev.yml down",
    "docker:logs": "docker compose -f infra/docker-compose.dev.yml logs -f",
    "db:migrate": "cd services/identity-mcp && pnpm db:migrate && cd ../.. && cd services/quoting-mcp && pnpm db:migrate && cd ../.."
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=9.0.0"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ]
}
